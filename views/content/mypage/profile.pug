.center-frame
  form(method="post", action="", name="profileForm")

    .board-prm
      .board-hdr
        .label-box._fb.flex._c
            i.icon-title-b.far.fa-id-card.fa-fw.c-orange
            span: |あなたのユーザーID

      .board-cnt._s
        .input-box.flex._c.st-readonly
            input(type="text", name="user_id", value=body_data.user_id, readonly=true)

    .board-prm

      .board-hdr

        .label-box._fb.flex._c
          i.icon-title-b.far.fa-user.fa-fw.c-orange
          span: |プロフィール編集

      .board-cnt
        .attention-prm
          p
            span.st-required(style="display:inline-block;")
              |&emsp;&emsp;&emsp;
            |&nbsp;は必須項目です。

        .label-input-box
          .label-box
            p.main-label: |ユーザーアイコン
          .custom-box._s
            .icon-box-wrap
              .icon-box.shadow-d
                img.icon-img
              button(type="submit", name="doEditProfileIcon").btn-prm-n.st-line-w.shadow-l
                span: |画像を変更する

        .label-input-box#box_user_name
          .label-box.icon_tip._edit
            p.main-label: |ユーザー名
          .input-box.flex._c.st-required
            input(type="text", name="user_name", maxlength=50)
          p.bottom-label

        .label-input-box#box_email
          .label-box.icon_tip._edit.help-tip(data-help_text=viewMsg.v00002)
            p.main-label: |メールアドレス
          .input-box.flex._c.st-required
            input(type="text", name="email", maxlength=256)
          p.bottom-label

        .label-input-box#box_prefectures_field
          .label-box.icon_tip._select.help-tip(data-help_text=viewMsg.v00005)
            p.main-label: |活動地域
          .select-box.flex._c
            select#prefectures.js-addPrefectures
              option(value="")
                each pref in self.globalParam.enumPref.getEnum()
                  option(value= pref.id) #{pref.name}
          

          p.st-title-tag.st-mt-s
            |追加した活動地域
          .tag-cnt-box.flex._wrap#prefectures_field(data-dummytag="input", name="prefectures_field")
          p.bottom-label

        .label-input-box#box_cos_shedule_tags(data-tag_plugin="profile_tag")
          .label-box.icon_tip._edit
            p.main-label: |タグの設定
          .input-box.flex._c
            input(type="text", maxlength=20)
            span(role="button"): i.icon-plus.fas.fa-plus-square.fa-fw.add-tag-btn
          
          p.bottom-label
          
          p.st-title-tag.st-mt-s
            |追加したタグ
          .tag-cnt-box.flex._wrap(data-dummytag="input", name="tags_field")

        .label-input-box
          .label-box.help-tip(data-help_text=viewMsg.v00007)
            p.main-label: |カバー背景画像
          .custom-box._s
            .cover-box-wrap
              .cover-box.flex._c.shadow-d
                img.cover-img(src="")
              button(type="submit", name="doEditBgCoverImg").btn-prm-n.st-line-w.shadow-l
                span: |画像を変更する
      
      .board-ftr._s.flex._c._jc
        button(type="submit", name="doUserUpdate").btn-prm.st-back-b.shadow-l
          span: |更新

  .board-prm
    .board-cnt._n
      .label-link
        a#deleteBtn(href="/delete").flex._c
          i.icon-title-b.fas.fa-minus-circle.fa-fw.c-red
          .st-string-set
            p: |アカウント削除
            span.sub-text: |c2Linkアカウントを削除します。
          i.icon-link.fas.fa-chevron-right.fa-fw
