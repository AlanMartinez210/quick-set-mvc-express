.center-frame
  form(method="post", action="", name="profileForm")

    .board-prm
      .board-hdr
        .label-box._fb.flex._c
            i.icon-title-b.far.fa-id-card.fa-fw.c-orange
            span: |あなたのユーザーID

      .board-cnt._s
        .input-box.flex._c.st-readonly
            input(type="text", name="user_id", value=body_data.user_id, readonly=true)

    .board-prm

      .board-hdr

        .label-box._fb.flex._c
          i.icon-title-b.far.fa-user.fa-fw.c-orange
          span: |プロフィール編集

      .board-cnt
        .attention-prm
          p
            span.st-required(style="border-radius:5px;display: inline-block;")
              |&emsp;&emsp;&emsp;
            |&nbsp;は必須項目です。

        .label-input-box#box_icon_url
          .label-box
            p.main-label: |アイコン
            span.sub-label: |200kまでの画像(jpg/gif/png)が設定できます。
          .custom-box._s
            .icon-box-wrap
              .icon-box.shadow-d
                img.icon_img(src="/image/icon2.png")
              button(type="submit", name="doEditProfileIcon").btn-prm-n.st-line-w.shadow-l
                span: |アイコンを変更

          p.bottom-label

        .label-input-box#box_user_name
          .label-box
            p.main-label: |ユーザー名
            span.sub-label: |50文字まで入力できます
          .input-box.flex._c.st-required
            input(type="text", name="user_name")
          p.bottom-label

        .label-input-box#box_email
          .label-box
            p.main-label: |メールアドレス
            span.sub-label: |＠を含むメールアドレスを入力してください
          .input-box.flex._c.st-required
            input(type="text", name="email")
          p.bottom-label

        .label-input-box#box_prefectures_field
          .label-box
            p.main-label: |活動地域
            span.sub-label: |あなたの活動している地域を選択し追加してください。
          .select-box.flex._c
            select#prefectures.js-addPrefectures
              option(value="")
                each pref in self.globalParam.enumPref.getEnum()
                  option(value= pref.id) #{pref.name}
          

          p.st-title-tag.st-mt-s
            |追加した活動地域
          .tag-cnt-box.flex._wrap#prefectures_field(data-dummytag="input", name="prefectures_field")
          p.bottom-label

        .label-input-box#box_tag_field
          .label-box
            p.main-label: |タグの設定
            span.sub-label: |よく使うタグを10個まで設定できます。設定したタグは募集または、予定を作成時に表示されます。
          .input-box.flex._c
            input(type="text")#tags
            span(role="button"): i.icon-plus.fas.fa-plus-square.fa-fw#tag_add_button
          
          p.st-title-tag.st-mt-s
            |追加したタグ一覧
          .tag-cnt-box.flex._wrap#tags_field(data-dummytag="input", name="tags_field")
          p.bottom-label
      
      .board-ftr._s.flex._c._jc
        button(type="submit", name="doUserUpdate").btn-prm.st-back-b.shadow-l
          span: |更新

  .board-prm
    .board-cnt._n
      .label-link
        a#deleteBtn(href="/delete").flex._c
          i.icon-title-b.fas.fa-minus-circle.fa-fw.c-red
          .st-string-set
            p: |アカウント削除
            span.sub-text: |c2Linkアカウントを削除します。
          i.icon-link.fas.fa-chevron-right.fa-fw
