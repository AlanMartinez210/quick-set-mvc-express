-
  const costumelistArr = [
    { title: "ひなまつり", name: "新田ひな" },
    { title: "ひなまつり", name: "三島瞳" },
    { title: "ひなまつり", name: "アンズ" },
    { title: "ひなまつり", name: "マオ" },
  ]
-

.center-frame
  .board-prm
    .board-hdr

      .label-box._fb.flex._c
        i.icon-title-b.fas.fa-camera.fa-fw.c-green
        span: |所持機材設定

    .board-cnt
      .attention-prm
        p
          span.st-required(style="border-radius:5px;display: inline-block;")
            |&emsp;&emsp;&emsp;
          |&nbsp;は必須項目です。

      .label-input-box._mbs#box_prefectures_field
        .label-box
          p.main-label: |機材種別
          span.sub-label: |登録する機材のカテゴリを選択してください。
        .select-box._s.flex._c.st-required
          select(name="equipment_type")
            each equip in self.globalParam.enumEquipmentType.getEnum()
              option(value=equip.id) #{equip.name}
            option(value="99") その他
        p.bottom-label
      
      .label-input-box._mbs#box_costume_title
        .label-box
          p.main-label: |メーカー
          span.sub-label: |機材のメーカーを選択してください。
        .input-box._s.flex._c.st-required
          input(type="text", name="content_title")
        p.bottom-label
      
      .label-input-box._mbs#box_costume_title
        .label-box
          p.main-label: |機材名
          span.sub-label: |機材の型名や名称を入力してださい。
        .input-box._s.flex._c.st-required
          input(type="text", name="content_title")
        p.bottom-label
      
      .label-input-box._mbs#box_costume_title
        .label-box
          p.main-label: |使用年数
          span.sub-label: |機材を使用した年数を入力してください。
        .input-box._s.flex._c
          input(type="text", name="content_title")
        p.bottom-label

    .board-ftr._s.flex._c._jc
      button.btn-prm.st-back-b.shadow-l
        span: |登録
  
  .board-prm
    .board-hdr

      .label-box._fb.flex._c
        i.icon-title-b.fas.fa-tshirt.fa-fw.c-green
        span: |所持機材一覧

    .board-cnt.list-board
      ul.st_options
        - for (let cl of costumelistArr )
          li.label-icon-link
            .link-wrap.flex._c
              .st-string-set
                span.sub-text: |#{cl.title}
                p: |#{cl.name}
              i.icon-link.fas.fa-trash-alt.fa-fw
