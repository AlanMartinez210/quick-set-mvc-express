-
  const recruit_search_info = self.bodyData.recruit_search_info;
  const recruit_list_arr = self.bodyData.recruit_list_arr;
  const recruit_list_pager = self.bodyData.recruit_list_pager;
-
.center-frame

  //- 条件表示部
  .board-prm
    //- 検索ボタン
    .float-cntnr.st-search-btn
      span#searchBtn.btn-prm.st-btn-circle.st-back-b.shadow-d
        i.icon-btn.fas.fa-search.fa-fw

    //- 検索条件表示部
    .board-hdr
      .label-box
        .label-box._s.flex._c
          span
            |期間&nbsp;:&nbsp;
            |#{recruit_search_info.search_date_from ? recruit_search_info.search_date_from : "指定なし"}&nbsp;
            |#{recruit_search_info.search_date_to ? " ～ " + recruit_search_info.search_date_to : ""}
        if recruit_search_info.prefectures_field.length
          .label-box._s.flex._c
            span
              |場所&nbsp;:&nbsp;
              |#{recruit_search_info.prefectures_field}

        if recruit_search_info.search_tag
          .label-box._s.flex._c
            span
              |タグ&nbsp;:&nbsp;
              |#{recruit_search_info.search_tag}
        if recruit_search_info.shot_type
          .label-box._s.flex._c
            span
              |種類&nbsp;:&nbsp;
              |#{global.C2LINK.SHOT_TYPE_ID_MAP[recruit_search_info.shot_type].name}

        input(type="hidden", name="searchInfo", value="#{JSON.stringify(recruit_search_info)}")


    //- 表示オプション表示部
    .board-cnt
      .check-box._n.flex._c
        input(id="bookmark" type="checkbox")
        label(for="bookmark")
          |ブックマークのみ表示

  //- 募集/予定一覧表示
  -let tmp_label_date;
  -for(let recruit_item of recruit_list_arr){ console.log(recruit_item);
    //- 日付を一時保存し、異なった場合はラベルを切り替える。
    -if(recruit_item.date_info.key != tmp_label_date){ tmp_label_date = recruit_item.date_info.key;
      // 日付
      include board/label.jade
    -}
    -
      const ui = recruit_item.user_info;
      const ei = recruit_item.event_info;
    -
    //- ユーザータイプごとで表示リストを分ける
    case Number(self.userType)
      when 1
        include board/cameraman.jade
      when 2
        include board/cosplayer.jade

  -}

  //- ページャー表示部
  .floor-prm
    .floor-hdr._s
      .pager#recruitlistPager
        ul.flex._jc
          -if(recruit_list_pager.now_page > 1){
            li: span(data-page="1"): i.icon-pager.fas.fa-angle-double-left.fa-fw
            li: span(data-page="#{recruit_list_pager.now_page-1}"): i.icon-pager.fas.fa-angle-left.fa-fw
          -}
          - for(let i=0;i<recruit_list_pager.disp_page_list.length;i++){ let p = recruit_list_pager.disp_page_list[i];
            li: span(class="#{p == recruit_list_pager.now_page ? 'selected' : '' }", data-page="#{p}"): |#{p}
          - }
          -if(recruit_list_pager.now_page < recruit_list_pager.max_page){
            li: span(data-page="#{recruit_list_pager.now_page-0+1}"): i.icon-pager.fas.fa-angle-right.fa-fw
            li: span(data-page="#{recruit_list_pager.max_page}"): i.icon-pager.fas.fa-angle-double-right.fa-fw
          -}

  //- AD表示部
