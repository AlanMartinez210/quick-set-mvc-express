.board-prm.custam-ptn
  .board-cnt.flex
    .inner-left
      //- アイコン
      .icon-box
        img(src=ui.icon)
      //- グットレビュー数
      .label-box.flex._c
        i.icon-label.far.fa-thumbs-up
        span: |#{recruit_item.good_review_num}
      //- ブックマーク
      .bookmark-box.shadow-l
        input(id=`bookmark${recruit_item.recruit_list_id}`, type="checkbox", checked=(recruit_item.bookmark_flg ? "checked" : undefined ))
        label(for=`bookmark${recruit_item.recruit_list_id}`)

    .inner-right
      .info-list
        //- 都道府県
        .label-box.flex._c.st-lbl-attention
          i.icon-label.fas.fa-map-marker-alt
          each prefecture in ei.prefectures
            span: |#{prefecture.prefecture_name}&nbsp;&nbsp;
        //- タグ
        .tag-box
          each tag in recruit_item.tags
            a(href="http://") #{tag.tag_name}

  .board-ftr._s.flex._c._jc
    a.btn-prm.link-btn.st-line-b.shadow-l.st-mr(name="openRecruitDetail" data-recruitlistid=recruit_item.recruit_list_id)
      span: |詳細表示
    a.btn-prm.link-btn.st-back-b.shadow-l(data-doRequest, data-requestid=recruit_item.recruit_list_id)
      span: |依頼する
