#createScheduleModal(data-modal="hide")
  form(method="post", action="", name="scheduleForm")

    .board-prm.tab-board

      .board-hdr
        .tab-item(data-tab_id="cameraRec").active-tab
          p: |スケジュール
        .tab-item(data-tab_id="groupRec")
          p: |あわせ募集

      .board-cnt._s(data-tab_content="cameraRec")
        .attention-prm
          p
            span.st-required(style="border-radius:5px;display: inline-block;")
              |&emsp;&emsp;&emsp;
            |&nbsp;は必須項目です。

        .label-input-box#box_date_key
          .label-box
            p.main-label: |日付
          .input-box.flex._c.st-readonly
            input(type="text", name="date_key")
            input(type="hidden", name="schedule_id")
          p.bottom-label

        .label-input-box#box_shot_type
          .label-box
            p.main-label: |撮影タイプ
          .select-box.flex._c.st-required
            select(name="shot_type")
              each shot_type in self.globalParam.enumShotType.getEnum()
                option(value=shot_type.code) #{shot_type.name}
          p.bottom-label

        .label-input-box#box_event_name
          .label-box
            p.main-label: |イベント名 or 開催地
            span.sub-label: |イベント名または開催する場所、建物の名前を入力してください。
          .input-box.flex._c.st-required
            input(type="text", name="event_name", placeholder="世界コスプレサミット")
          p.bottom-label

        .label-input-box#box_prefecture
          .label-box
            p.main-label: |開催都道府県
            span.sub-label: |イベントまたは撮影が行われる都道府県を選択してください。
          .select-box.flex._c.st-required
            select(name="prefecture")
              option(value="")
                each pref in self.globalParam.enumPref.getEnum()
                  option(value=pref.id) #{pref.name}
          p.bottom-label

        .label-input-box#box_coschara
          .label-box
            p.main-label: |コスプレキャラクター
            span.sub-label: |当日コスプレするキャラクターを選択してください。
          .select-box.flex._c
            select(name="coschara")
              option(value="")
                //- each pref in self.globalParam.enumPref.getEnum()
                //-   option(value=pref.id) #{pref.name}
          p.bottom-label
          .attention-prm
            p
              |コスプレするキャラクターがいない場合は<a href="/mypage/costume" class="a-link">所持コスプレ設定</a>へ

        .label-input-box#box_tag_field
          .label-box
            p.main-label: |タグの設定
            span.sub-label: |募集時の要項をタグとして10個まで設定できます。(例: 要一眼レフ 交通費自己負担
          .input-box.flex._c
            input(type="text")#tags
            span(role="button"): i.icon-plus.fas.fa-plus-square.fa-fw#tag_add_button
          
          p.st-title-tag.st-mt-s
            |追加したタグ一覧
          .tag-cnt-box.flex._wrap#tags_field(data-dummytag="input", name="tags_field")

          p.bottom-label

        .accordion-prm.inline.shadow-l

          .accordion-label.flex._c
            .accordion-title
              p: |詳細オプション

          .accordion-cnt._s
            .label-input-box#box_time_from
              .label-box
                p.main-label: |撮影開始時間
                span.sub-label: |撮影の開始時間を選択してください。
              .select-box.flex._c
                select(name="time_from")
                  option(value="") 未定
                  option(value="要相談") 要相談
                  - for(let i=0;i<24;i++){ const time = ((i+6)%24);
                    option(value=`${time}:00`) #{time}:00
                    option(value=`${time}:30`) #{time}:30
                  - }

              p.bottom-label

            .label-input-box#box_time_to
              .label-box
                p.main-label: |撮影終了時間
                span.sub-label: |撮影の終了時間を選択してください。
              .select-box.flex._c
                select(name="time_to")
                  option(value="") 未定
                  option(value="要相談") 要相談
                  - for(let i=0;i<24;i++){ const time = ((i+6)%24);
                    option(value=`${time}:00`) #{time}:00
                    option(value=`${time}:30`) #{time}:30
                  - }
              p.bottom-label

            .label-input-box#box_num
              .label-box
                p.main-label: |募集人数
              .input-box.flex._c
                input(type="text", name="num")
              p.bottom-label

            .label-input-box#box_cost
              .label-box
                p.main-label: |参加費用
                span.sub-label: |交通費以外にカメラマンが負担する金額を入力してください。
              .input-box.flex._c
                input(type="text", name="cost")
              p.bottom-label

            .label-input-box#box_event_url
              .label-box
                p.main-label: |外部サイトリンク
                span.sub-label: |イベントや開催地のURLリンクがある場合は入力してください。
              .input-box.flex._c
                input(type="text", name="event_url", placeholder="http://")
              p.bottom-label

            .label-input-box#box_remarks
              .label-box
                p.main-label: |備考
              .textarea-box.flex._c
                textarea(name="remarks", rows="3")
              p.bottom-label

        .label-input-box#box_allow_recruit_flg
          .label-box
            p.main-label: |募集設定
            span.sub-label: |チェックするとカメラマンが応募できる状態になります。
          .check-box.flex._c
            input(id="allowrRecruitFlg" type="checkbox", name="allow_recruit_flg")
            label(for="allowrRecruitFlg")
              |カメラマンを募集する
          p.bottom-label
        
      .board-cnt._s(data-tab_content="groupRec")

        .accordion-prm.inline.shadow-l

          .accordion-label.flex._c
            .accordion-title
              p: | コスプレ検索
          .accordion-cnt._s

            #registTitle
              .attention-prm
                  p
                    span.st-required(style="border-radius:5px;display: inline-block;")
                      |&emsp;&emsp;&emsp;
                    |&nbsp;は必須項目です。

              .label-input-box._mbs#box_costume_title
                .label-box
                  p.main-label: |作品名
                  span.sub-label: |作品名、または名称の一部を入力してください。
                .input-box.flex._c.st-required
                  input(type="text", name="search_content_title", placeholder="ひなまつり")
                p.bottom-label

              .option-box.flex._jr
                span.option-btn.st-line-b(name="titleSearch")
                  |検索
              
              p.st-title-tag#titleListNum
                |候補一覧 (0件)

              ul.inner_list#titleList
                li: |候補がありません
              
            //- #registChara

            //-   .option-box.flex._jr
            //-     span.option-btn.st-line-b(name="backTitle")
            //-       |作品選択に戻る

            //-   .label-input-box._mbs
            //-     .label-box
            //-       p.main-label: |作品名
            //-     .input-box.flex._c.st-readonly
            //-       input(type="text", name="content_title_name", readonly)
            //-       input(type="hidden", name="conf_content_title")

            //-   p.st-title-tag
            //-     |キャラクター候補一覧

            //-   ul.inner_list#charaList
            //-     li: |候補がありません

        .label-input-box#box_allow_recruit_flg
          .label-box
            p.main-label: |募集通知
            span.sub-label: |チェックすると対象のコスプレができる人にあわせ募集をしてることを通知します。
          .check-box.flex._c
            input(id="allowrRecruitFlg" type="checkbox", name="allow_recruit_flg")
            label(for="allowrRecruitFlg")
              |あわせ募集を通知する
          p.bottom-label
            
        
      .board-ftr._s.flex._c._jc.proc-box
        button(type="submit", data-proc="create", name="doSchedulePost").btn-prm.st-back-b.shadow-l.proc-btn
            |登録
        button(type="submit", data-proc="edit", name="doSchedulePost").btn-prm.st-back-b.shadow-l.proc-btn
            |更新
        button(type="submit", data-proc="delete", name="doSchedulePost").btn-prm.st-back-r.shadow-l.proc-btn
            |削除
