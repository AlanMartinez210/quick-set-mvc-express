#confirmRegistCostumeModal(data-modal="hide")
  form(name="confirmRegistCostumeForm")

    .board-prm
      .board-cnt._s
        .attention-prm
          p: |登録項目を確認してください。

        .label-input-box._mbs
          .label-box
            p.main-label: |作品名
          .input-box.flex._c.st-readonly
            input(type="text", name="conf_title_name", readonly)
            input(type="hidden", name="costume_id")
        
        .label-input-box._mbs
          .label-box
            p.main-label: |キャラクター
          .input-box.flex._c.st-readonly
            input(type="text", name="conf_chara_name", readonly)
            input(type="hidden", name="conf_chara_id")

        .label-input-box#box_costume_comment
          .label-box.icon_tip._edit.help-tip(data-help_text="＠を含むメールアドレスを入力してください")
            p.main-label: |メモ
          .textarea-box.flex._c
            textarea(name="costume_comment", rows="5")
          p.bottom-label

      .board-ftr._s.flex._c._jc.proc-board
        button(name="doPostCostume", data-proc="create").st-mr.btn-prm.st-back-b.shadow-l.proc-btn
          |登録
        button(name="doPostCostume", data-proc="edit").st-mr.btn-prm.st-back-b.shadow-l.proc-btn
          |編集
        button(name="doPostCostume", data-proc="delete").btn-prm.st-back-r.shadow-l.proc-btn
          |削除
